---
import theme from '../data/theme.json';

// Convert "Open Sans" to "Open+Sans" for the URL
const hFont = theme.fonts.heading.replace(/ /g, '+');
const bFont = theme.fonts.body.replace(/ /g, '+');

const googleFontsUrl = `https://fonts.googleapis.com/css2?family=${hFont}:wght@400;700&family=${bFont}:wght@300;400;600&display=swap`;
---

<!-- This fetches the AI-selected fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href={googleFontsUrl} rel="stylesheet">
