---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Footer from '../components/Footer.astro';

// Import the AI-generated content
// Note: We use a try/catch or default object in case the JSON is missing during initial setup
import contentData from '../data/site-content.json';
const content = contentData || {
  meta: { title: "Default Title", description: "Default Desc" },
  hero: { headline: "Welcome", subheadline: "Loading...", ctaText: "Click me" },
  contact: { email: "info@example.com", phone: "555-5555" },
  features: []
};
---

<Layout title={content.meta.title} description={content.meta.description}>
  <main>
    <Navbar company={content.meta.title} contact={content.contact} />
    
    <Hero 
      headline={content.hero.headline} 
      subheadline={content.hero.subheadline} 
      cta={content.hero.ctaText}
      color={content.colors?.primary}
    />
    
    <Features features={content.features} />
    
    <Footer contact={content.contact} />
  </main>
</Layout>
